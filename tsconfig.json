{
  "compilerOptions": {
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "classic",
    "target": "ES2022",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./docs",
    "skipLibCheck": true,
    "rootDirs": [
      "docs",
      "src"
    ],
    "paths": {
      "@ixfx/trackers.js": [
        "../node_modules/@ixfx/trackers/dist/src/index"
      ],
      "@ixfx/numbers.js": [
        "../node_modules/@ixfx/numbers/dist/src/index"
      ],
    }
  },
  // "include": [
  //   "**/*.ts"
  // ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "docs/*"
  ]
}