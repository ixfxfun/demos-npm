{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "target": "ES2023",
    "jsx": "react",
    "allowImportingTsExtensions": false,
    "checkJs": true,
    "strictNullChecks": true,
    "allowJs": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "paths": {
      "@ixfx/lorp": [
        "../node_modules/@ixfx/trackers/dist/src/index.js"
      ],
      "@ixfx/trackers.js": [
        "../node_modules/@ixfx/trackers/dist/src/index"
      ],
      "@ixfx/numbers.js": [
        "../node_modules/@ixfx/numbers/dist/src/index"
      ],
    }
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.js"
  ]
}